<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16sp"
    android:paddingRight="16sp"
    >


    <TextView
        android:id="@+id/titleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:text="@string/title_name"
        android:layout_gravity="center|top"
         />

    <ImageView
        android:id="@+id/titleImage"
        android:layout_width="400sp"
        android:layout_height="500sp"
        android:layout_marginTop="16sp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        android:layout_gravity="center|top"/>



    <TextView
        android:id="@+id/titleVolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:layout_gravity="start|top"
        android:text="@string/title_volume"
         />
    <TextView
        android:id="@+id/titleTranslator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:layout_gravity="start|top"
        android:text="@string/title_translator"
         />
    <TextView
        android:id="@+id/titleStatusTranslation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:layout_gravity="start|top"
        android:text="@string/title_status_translation"
        />

    <TextView
        android:id="@+id/titleGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:layout_gravity="start|top"
        android:text="@string/title_genre"
         />
    <TextView
        android:id="@+id/titleCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:text="@string/title_category"
        android:layout_gravity="start|top" />
    <TextView
        android:id="@+id/titleScreenwriters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:layout_gravity="start|top"
        android:text="@string/title_screenwriters"
         />
    <TextView
        android:id="@+id/titlePainters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:layout_gravity="start|top"
        android:text="@string/title_painters"
         />
    <TextView
        android:id="@+id/titleYearOfIssue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:layout_gravity="start|top"
        android:text="@string/title_yearOfIssue"
        />
    <TextView
        android:id="@+id/titleTags"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:layout_gravity="start|top"
        android:text="@string/title_tags"
         />
    <TextView
        android:id="@+id/titleDescription"
        android:maxLines="5"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:text="@string/title_description"
        android:layout_gravity="start|top"
        />

        </LinearLayout>
    </ScrollView>
